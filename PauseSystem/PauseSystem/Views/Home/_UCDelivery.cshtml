@model PauseSystem.Models.CustomerDelivery
@{
    var item = Model;
}
@if (Model.Id == 0)
{
    return;
}


<tr id="@item.Id">
    <td>
        <a class="mr10" href="javascript:jsLiverenger.changeAntal('@item.ProduktNumber','span_@item.Id','+', '@item.TempAbonnement', '@item.Id')">
        @if (item.TempAbonnement == 1)
{
            
            <i class='glyphicon glyphicon-plus ' style="color:red"></i>
            
        }
        else
            {
            <i class='glyphicon glyphicon-plus '></i>
            }
        </a>
        <span id="span_@item.Id">@item.Number</span>
        <a class="ml10" href="javascript:jsLiverenger.changeAntal('@item.ProduktNumber','span_@item.Id','-', '@item.TempAbonnement', '@item.Id')"><i class='glyphicon glyphicon-minus'></i></a>
    </td>
    <td>@item.ProduktNumber</td>
    <td>@item.Produkt</td>
    <td>@item.Pris</td>
    <td>@item.Pris</td>
    <td class="action">
        @Ajax.ActionHtmlLink("<i class='glyphicon glyphicon-remove'></i>", "AjaxDeleteDelivery", String.Empty, new { id = item.Id },
            new AjaxOptions
            {
                HttpMethod = "Post",
                Confirm = "Do you want to delete this delivery?",
                LoadingElementId = "bgLoader",
                OnComplete = String.Format("jsLiverenger.deleteDelivery('{0}',xhr)", item.Id)
            }, new { title = "Delete" })
    </td>
</tr>
