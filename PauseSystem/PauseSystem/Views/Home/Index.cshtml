@{
    ViewBag.Title = "Pause System";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        Hej @(PauseSecurity.GetFullName()) Du kan nu afmelde de dage hvor du ikke ønsker frugt.
        Afmeldning gælder for alle varer som normalt leveres på den pågælende dato.
        Ønker du stadig levering af frugt, men i mindre mængder, så kontakt os venligst på 32 200 777 eller på salg@firmafrugt.com
        <br /><br />
        Når du logger ud, vil du modtage en opdateret leveringsoversigt hvor du kan se din kommende leveringer.

        <h4>Leveringsadresser</h4>

        <div class="form-horizontal">
            @using (Html.BeginForm(null, null, FormMethod.Post))
            {
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Startdato:</label>
                        <div class="col-sm-9">
                            <div class="input-group input-append date">
                                @Html.TextBox("StartDate", (string)ViewBag.StartDate, new { @class = "form-control", title = "Startdato", required = true})
                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            @Html.ValidationMessage("StartDate")
                        </div>
                    </div>

                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="col-xs-3 control-label">Slutdato:</label>
                        <div class="col-xs-9">
                            <div class="input-group input-append date">
                                @Html.TextBox("EndDate", (string)ViewBag.EndDate, htmlAttributes: new { @class = "form-control required", title = "Slutdato" })
                                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                            @Html.ValidationMessage("EndDate")
                        </div>
                    </div>

                </div>

                <div class="col-md-4">
                    <button class="btn btn-primary">Hent leveringe</button>
                </div>
            }
        </div>

        <div class="clearfix"></div>
        @{Html.RenderPartial("_UCLiverings");}

    </div>
    <script type="text/javascript">
        function ready() {
            global.initdatepicker('.date');
        }
    </script>
}
else
{
    <div class="jumbotron">
        <h1>Firmafrugt.com</h1>
        <p class="lead">levering mandag til fredag op til postnummer 4000.</p>
        <p> <h6> Kundeservice: 32 200 777 | mandag - fredag 8:00 - 16:00</h6></p>
    </div>

    <div class="row">

    </div>
}

